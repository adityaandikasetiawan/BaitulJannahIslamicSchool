<%- include('../partials/header') %>

<!-- Page Wrapper -->
<div class="page-wrapper">
    <div class="content container-fluid">
        <!-- Page Header -->
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="page-title">Kelola Agenda</h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">Kelola Agenda</li>
                    </ul>
                </div>
                <div class="col-auto">
                    <a href="/admin/agenda/tambah" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Tambah Agenda
                    </a>
                </div>
            </div>
        </div>
        <!-- /Page Header -->

        <!-- Flash Messages -->
        <% if(success_msg != ''){ %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= success_msg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        
        <% if(error_msg != ''){ %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error_msg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <!-- /Flash Messages -->

        <div class="row">
            <div class="col-sm-12">
                <div class="card card-table">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-center mb-0 datatable">
                                <thead>
                                    <tr>
                                        <th>Judul</th>
                                        <th>Tanggal</th>
                                        <th>Waktu</th>
                                        <th>Lokasi</th>
                                        <th>Kategori</th>
                                        <th>Status</th>
                                        <th class="text-end">Aksi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if(typeof agenda != 'undefined' && agenda.length > 0) { %>
                                        <% agenda.forEach(function(item) { %>
                                            <tr>
                                                <td>
                                                    <h2 class="table-avatar">
                                                        <% if(item.gambar) { %>
                                                            <a href="#" class="avatar avatar-sm me-2">
                                                                <img class="avatar-img rounded-circle" src="/assets/img/agenda/<%= item.gambar %>" alt="Gambar Agenda">
                                                            </a>
                                                        <% } %>
                                                        <a><%= item.judul %></a>
                                                    </h2>
                                                </td>
                                                <td><%= new Date(item.tanggal).toLocaleDateString('id-ID', { day: 'numeric', month: 'long', year: 'numeric' }) %></td>
                                                <td>
                                                    <%= item.waktuMulai %>
                                                    <% if(item.waktuSelesai) { %>
                                                        - <%= item.waktuSelesai %>
                                                    <% } %>
                                                </td>
                                                <td><%= item.lokasi %></td>
                                                <td><span class="badge bg-info"><%= item.kategori %></span></td>
                                                <td>
                                                    <% if(item.status === 'upcoming') { %>
                                                        <span class="badge bg-warning">Akan Datang</span>
                                                    <% } else if(item.status === 'ongoing') { %>
                                                        <span class="badge bg-success">Sedang Berlangsung</span>
                                                    <% } else if(item.status === 'completed') { %>
                                                        <span class="badge bg-secondary">Selesai</span>
                                                    <% } else if(item.status === 'canceled') { %>
                                                        <span class="badge bg-danger">Dibatalkan</span>
                                                    <% } %>
                                                </td>
                                                <td class="text-end">
                                                    <div class="actions">
                                                        <a href="/admin/agenda/edit/<%= item._id %>" class="btn btn-sm bg-success-light me-2">
                                                            <i class="fas fa-pen"></i>
                                                        </a>
                                                        <a href="#" class="btn btn-sm bg-danger-light" data-bs-toggle="modal" data-bs-target="#delete_modal_<%= item._id %>">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                            
                                            <!-- Delete Modal -->
                                            <div class="modal fade" id="delete_modal_<%= item._id %>" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="deleteModalLabel">Konfirmasi Hapus</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <p>Apakah Anda yakin ingin menghapus agenda "<%= item.judul %>"?</p>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                                                            <a href="/admin/agenda/hapus/<%= item._id %>" class="btn btn-danger">Hapus</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- /Delete Modal -->
                                        <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="7" class="text-center">Tidak ada data agenda</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Page Wrapper -->

<%- include('../partials/footer') %>