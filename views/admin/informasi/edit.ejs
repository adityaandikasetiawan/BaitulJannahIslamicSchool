<%- include('../../partials/header') %>

<div class="main-wrapper">
    <%- include('../../partials/header2') %>

    <div class="page-wrapper">
        <div class="content container-fluid">
            <div class="page-header">
                <div class="row align-items-center">
                    <div class="col">
                        <h3 class="page-title">Edit Informasi</h3>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                            <li class="breadcrumb-item"><a href="/admin/informasi">Kelola Informasi</a></li>
                            <li class="breadcrumb-item active">Edit Informasi</li>
                        </ul>
                    </div>
                </div>
            </div>

            <% if(error_msg != ''){ %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= error_msg %>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            <% } %>

            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-body">
                            <form action="/admin/informasi/edit/<%= informasi.id %>" method="POST" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-12">
                                        <h5 class="form-title"><span>Detail Informasi</span></h5>
                                    </div>
                                    <div class="col-12 col-sm-6">
                                        <div class="form-group">
                                            <label>Judul</label>
                                            <input type="text" name="judul" class="form-control" value="<%= informasi.judul %>" required>
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-6">
                                        <div class="form-group">
                                            <label>Jenis</label>
                                            <select name="jenis" class="form-control" required>
                                                <option value="">Pilih Jenis</option>
                                                <option value="pengumuman" <%= informasi.jenis === 'pengumuman' ? 'selected' : '' %>>Pengumuman</option>
                                                <option value="berita" <%= informasi.jenis === 'berita' ? 'selected' : '' %>>Berita</option>
                                                <option value="artikel" <%= informasi.jenis === 'artikel' ? 'selected' : '' %>>Artikel</option>
                                                <option value="faq" <%= informasi.jenis === 'faq' ? 'selected' : '' %>>FAQ</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label>Konten</label>
                                            <textarea name="konten" class="form-control" rows="5" required><%= informasi.konten %></textarea>
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-6">
                                        <div class="form-group">
                                            <label>Gambar</label>
                                            <input type="file" name="gambar" class="form-control">
                                            <small class="form-text text-muted">Format: JPG, JPEG, PNG, GIF. Maks: 5MB</small>
                                            <% if(informasi.gambar) { %>
                                                <div class="mt-2">
                                                    <img src="<%= informasi.gambar %>" alt="<%= informasi.judul %>" style="max-width: 200px; max-height: 200px;">
                                                </div>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-6">
                                        <div class="form-group">
                                            <label>Dokumen (Opsional)</label>
                                            <input type="file" name="dokumen" class="form-control">
                                            <small class="form-text text-muted">Format: PDF, DOC, DOCX, XLS, XLSX, PPT, PPTX. Maks: 5MB</small>
                                            <% if(informasi.dokumen) { %>
                                                <div class="mt-2">
                                                    <a href="<%= informasi.dokumen %>" target="_blank" class="btn btn-sm btn-info">
                                                        <i class="fas fa-file"></i> Lihat Dokumen
                                                    </a>
                                                </div>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-6">
                                        <div class="form-group">
                                            <label>Status</label>
                                            <select name="status" class="form-control" required>
                                                <option value="aktif" <%= informasi.status === 'aktif' ? 'selected' : '' %>>Aktif</option>
                                                <option value="tidak_aktif" <%= informasi.status === 'tidak_aktif' ? 'selected' : '' %>>Tidak Aktif</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <button type="submit" class="btn btn-primary">Simpan Perubahan</button>
                                        <a href="/admin/informasi" class="btn btn-secondary">Batal</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../partials/footer') %>