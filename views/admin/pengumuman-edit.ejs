<%- include('../partials/header') %>

<!-- Page Wrapper -->
<div class="page-wrapper">
    <div class="content container-fluid">
        <!-- Page Header -->
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="page-title">Edit Pengumuman</h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="/admin/pengumuman">Kelola Pengumuman</a></li>
                        <li class="breadcrumb-item active">Edit Pengumuman</li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- /Page Header -->

        <!-- Flash Messages -->
        <% if(typeof errors != 'undefined' && errors.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <ul class="mb-0">
                    <% errors.forEach(function(error) { %>
                        <li><%= error.msg %></li>
                    <% }); %>
                </ul>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <!-- /Flash Messages -->

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <form action="/admin/pengumuman/edit/<%= pengumuman._id %>" method="POST" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group mb-3">
                                        <label class="form-label">Judul Pengumuman <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" name="judul" value="<%= pengumuman.judul %>" required>
                                    </div>
                                    
                                    <div class="form-group mb-3">
                                        <label class="form-label">Isi Pengumuman <span class="text-danger">*</span></label>
                                        <textarea class="form-control" id="editor" name="isi" rows="10" required><%= pengumuman.isi %></textarea>
                                    </div>
                                    
                                    <div class="form-group mb-3">
                                        <label class="form-label">Lampiran</label>
                                        <input type="file" class="form-control" name="lampiran">
                                        <small class="text-muted">Format: PDF, DOC, DOCX, XLS, XLSX. Maks: 5MB. Biarkan kosong jika tidak ingin mengubah lampiran.</small>
                                        
                                        <% if(pengumuman.lampiran) { %>
                                            <div class="mt-2">
                                                <p>Lampiran saat ini: <a href="/assets/lampiran/<%= pengumuman.lampiran %>" target="_blank"><%= pengumuman.lampiran %></a></p>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                                
                                <div class="col-md-4">
                                    <div class="form-group mb-3">
                                        <label class="form-label">Untuk <span class="text-danger">*</span></label>
                                        <select class="form-select" name="untuk" required>
                                            <option value="">Pilih Tujuan</option>
                                            <option value="Semua" <%= pengumuman.untuk === 'Semua' ? 'selected' : '' %>>Semua</option>
                                            <option value="Siswa" <%= pengumuman.untuk === 'Siswa' ? 'selected' : '' %>>Siswa</option>
                                            <option value="Guru" <%= pengumuman.untuk === 'Guru' ? 'selected' : '' %>>Guru</option>
                                            <option value="Orang Tua" <%= pengumuman.untuk === 'Orang Tua' ? 'selected' : '' %>>Orang Tua</option>
                                            <option value="Staff" <%= pengumuman.untuk === 'Staff' ? 'selected' : '' %>>Staff</option>
                                        </select>
                                    </div>
                                    
                                    <div class="form-group mb-3">
                                        <label class="form-label">Tanggal Mulai <span class="text-danger">*</span></label>
                                        <input type="date" class="form-control" name="tanggalMulai" value="<%= pengumuman.tanggalMulai.toISOString().split('T')[0] %>" required>
                                    </div>
                                    
                                    <div class="form-group mb-3">
                                        <label class="form-label">Tanggal Selesai</label>
                                        <input type="date" class="form-control" name="tanggalSelesai" value="<%= pengumuman.tanggalSelesai ? pengumuman.tanggalSelesai.toISOString().split('T')[0] : '' %>">
                                        <small class="text-muted">Biarkan kosong jika tidak ada batas waktu</small>
                                    </div>
                                    
                                    <div class="form-group mb-3">
                                        <label class="form-label">Status <span class="text-danger">*</span></label>
                                        <select class="form-select" name="status" required>
                                            <option value="active" <%= pengumuman.status === 'active' ? 'selected' : '' %>>Aktif</option>
                                            <option value="inactive" <%= pengumuman.status === 'inactive' ? 'selected' : '' %>>Tidak Aktif</option>
                                        </select>
                                    </div>
                                    
                                    <div class="form-group mb-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="penting" id="pengumumanPenting" value="true" <%= pengumuman.penting ? 'checked' : '' %>>
                                            <label class="form-check-label" for="pengumumanPenting">
                                                Tandai sebagai Pengumuman Penting
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="text-end mt-4">
                                <a href="/admin/pengumuman" class="btn btn-secondary me-2">Batal</a>
                                <button type="submit" class="btn btn-primary">Perbarui Pengumuman</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Page Wrapper -->

<%- include('../partials/footer') %>

<script>
    // Initialize CKEditor
    ClassicEditor
        .create(document.querySelector('#editor'))
        .catch(error => {
            console.error(error);
        });
</script>