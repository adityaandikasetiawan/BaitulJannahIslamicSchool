<%- include('../../../partials/admin-header') %>

<div class="container-fluid">
  <div class="row">
    <%- include('../../../partials/admin-sidebar') %>

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Edit Carousel</h1>
      </div>

      <%- include('../../../partials/messages') %>

      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Form Edit Carousel</h5>
        </div>
        <div class="card-body">
          <form action="/admin/beranda/carousel/edit/<%= carousel.id %>" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="judul" class="form-label">Judul</label>
              <input type="text" class="form-control" id="judul" name="judul" value="<%= carousel.judul %>" required>
            </div>
            <div class="mb-3">
              <label for="subjudul" class="form-label">Subjudul</label>
              <input type="text" class="form-control" id="subjudul" name="subjudul" value="<%= carousel.subjudul || '' %>">
            </div>
            <div class="mb-3">
              <label for="deskripsi" class="form-label">Deskripsi</label>
              <textarea class="form-control" id="deskripsi" name="deskripsi" rows="3"><%= carousel.deskripsi || '' %></textarea>
            </div>
            <div class="mb-3">
              <label for="gambar" class="form-label">Gambar</label>
              <% if (carousel.gambar) { %>
                <div class="mb-2">
                  <img src="<%= carousel.gambar %>" alt="<%= carousel.judul %>" class="img-thumbnail" style="max-height: 200px;">
                </div>
              <% } %>
              <input type="file" class="form-control" id="gambar" name="gambar" accept="image/*">
              <small class="text-muted">Ukuran gambar yang direkomendasikan: 1920x1080 piksel. Biarkan kosong jika tidak ingin mengubah gambar.</small>
            </div>
            <div class="mb-3">
              <label for="urutan" class="form-label">Urutan</label>
              <input type="number" class="form-control" id="urutan" name="urutan" min="1" value="<%= carousel.urutan || 1 %>">
            </div>
            <div class="d-flex justify-content-between">
              <a href="/admin/beranda" class="btn btn-secondary">Kembali</a>
              <button type="submit" class="btn btn-primary">Simpan Perubahan</button>
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>
</div>

<%- include('../../../partials/admin-footer') %>