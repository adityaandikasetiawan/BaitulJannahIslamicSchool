<%- include('../partials/header') %>

<!-- Page Wrapper -->
<div class="page-wrapper">
    <div class="content container-fluid">
        <!-- Page Header -->
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="page-title">Tambah Galeri</h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="/admin/galeri">Kelola Galeri</a></li>
                        <li class="breadcrumb-item active">Tambah Galeri</li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- /Page Header -->

        <!-- Flash Messages -->
        <% if(typeof errors != 'undefined' && errors.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <ul class="mb-0">
                    <% errors.forEach(function(error) { %>
                        <li><%= error.msg %></li>
                    <% }); %>
                </ul>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <!-- /Flash Messages -->

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <form action="/admin/galeri/tambah" method="POST" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label">Judul <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" name="judul" required>
                                    </div>
                                    
                                    <div class="form-group mb-3">
                                        <label class="form-label">Deskripsi</label>
                                        <textarea class="form-control" name="deskripsi" rows="4"></textarea>
                                    </div>
                                    
                                    <div class="form-group mb-3">
                                        <label class="form-label">Kategori <span class="text-danger">*</span></label>
                                        <select class="form-select" name="kategori" required>
                                            <option value="">Pilih Kategori</option>
                                            <option value="kegiatan">Kegiatan</option>
                                            <option value="fasilitas">Fasilitas</option>
                                            <option value="prestasi">Prestasi</option>
                                            <option value="lainnya">Lainnya</option>
                                        </select>
                                    </div>
                                    
                                    <div class="form-group mb-3">
                                        <label class="form-label">Tanggal <span class="text-danger">*</span></label>
                                        <input type="date" class="form-control" name="tanggal" required>
                                    </div>
                                    
                                    <div class="form-group mb-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="isPublished" id="isPublished" value="true" checked>
                                            <label class="form-check-label" for="isPublished">
                                                Publikasikan sekarang
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label">Gambar <span class="text-danger">*</span></label>
                                        <input type="file" class="form-control" name="gambar" id="gambarInput" accept="image/*" required>
                                        <small class="text-muted">Format: JPG, JPEG, PNG. Maks: 2MB</small>
                                    </div>
                                    
                                    <div class="form-group mb-3">
                                        <label class="form-label">Preview Gambar</label>
                                        <div class="image-preview mt-2" id="imagePreview">
                                            <img src="/assets/img/placeholder.jpg" alt="Preview" class="img-fluid rounded">
                                        </div>
                                    </div>
                                    
                                    <!-- Multiple Upload Option -->
                                    <div class="form-group mb-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="enableMultipleUpload">
                                            <label class="form-check-label" for="enableMultipleUpload">
                                                Upload multiple gambar
                                            </label>
                                        </div>
                                    </div>
                                    
                                    <div id="multipleUploadSection" style="display: none;">
                                        <div class="form-group mb-3">
                                            <label class="form-label">Gambar Tambahan</label>
                                            <input type="file" class="form-control" name="gambarTambahan" multiple accept="image/*">
                                            <small class="text-muted">Anda dapat memilih beberapa file sekaligus. Maks: 5 file</small>
                                        </div>
                                        
                                        <div class="form-group mb-3">
                                            <label class="form-label">Preview Gambar Tambahan</label>
                                            <div class="row" id="multipleImagePreview">
                                                <!-- Preview will be shown here -->
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /Multiple Upload Option -->
                                </div>
                            </div>
                            
                            <div class="text-end mt-4">
                                <a href="/admin/galeri" class="btn btn-secondary me-2">Batal</a>
                                <button type="submit" class="btn btn-primary">Simpan Galeri</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Page Wrapper -->

<%- include('../partials/footer') %>

<script>
    // Single image preview
    document.getElementById('gambarInput').addEventListener('change', function(e) {
        const file = e.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(event) {
                document.querySelector('#imagePreview img').src = event.target.result;
            };
            reader.readAsDataURL(file);
        }
    });
    
    // Toggle multiple upload section
    document.getElementById('enableMultipleUpload').addEventListener('change', function() {
        const multipleSection = document.getElementById('multipleUploadSection');
        if (this.checked) {
            multipleSection.style.display = 'block';
        } else {
            multipleSection.style.display = 'none';
        }
    });
    
    // Multiple images preview
    document.querySelector('input[name="gambarTambahan"]').addEventListener('change', function(e) {
        const files = e.target.files;
        const previewContainer = document.getElementById('multipleImagePreview');
        previewContainer.innerHTML = '';
        
        if (files.length > 0) {
            for (let i = 0; i < files.length; i++) {
                const file = files[i];
                const reader = new FileReader();
                
                reader.onload = function(event) {
                    const col = document.createElement('div');
                    col.className = 'col-md-4 col-sm-6 mb-3';
                    
                    const img = document.createElement('img');
                    img.src = event.target.result;
                    img.className = 'img-fluid rounded';
                    img.alt = 'Preview';
                    
                    col.appendChild(img);
                    previewContainer.appendChild(col);
                };
                
                reader.readAsDataURL(file);
            }
        }
    });
</script>