<%- include('../../partials/admin-sidebar') %>

<div class="col-lg-9">
    <div class="mb-3">
        <h5>Sejarah</h5>
    </div>
    <ul class="settings-nav d-flex align-items-center flex-wrap border bg-light-900 rounded">
        <li><a href="/admin/tentangkami/sejarah" class="active">Sejarah</a></li>
        <li><a href="/admin/tentangkami/visimisi">Visi Misi</a></li>
