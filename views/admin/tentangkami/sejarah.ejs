        <li><a href="/admin/tentangkami/fasilitas">Fasilitas</a></li>
    </ul>
    <div class="card">
        <div class="card-body">
            <form action="/admin/tentangkami/sejarah/update" method="POST">
                <div class="mb-3">
                    <label class="form-label">Judul</label>
                    <input type="text" class="form-control" name="title" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Konten</label>
                    <textarea class="form-control" rows="6" name="content" required></textarea>
                </div>
                <button type="submit" class="btn btn-secondary">Simpan Perubahan</button>
            </form>
        </div>
    </div>
</div>