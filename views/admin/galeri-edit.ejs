<%- include('../partials/header') %>

<!-- Page Wrapper -->
<div class="page-wrapper">
    <div class="content container-fluid">
        <!-- Page Header -->
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="page-title">Edit Galeri</h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="/admin/galeri">Kelola Galeri</a></li>
                        <li class="breadcrumb-item active">Edit Galeri</li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- /Page Header -->

        <!-- Flash Messages -->
        <% if(typeof errors != 'undefined' && errors.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <ul class="mb-0">
                    <% errors.forEach(function(error) { %>
                        <li><%= error.msg %></li>
                    <% }); %>
                </ul>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <!-- /Flash Messages -->

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <form action="/admin/galeri/edit/<%= galeri._id %>" method="POST" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label">Judul <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" name="judul" value="<%= galeri.judul %>" required>
                                    </div>
                                    
                                    <div class="form-group mb-3">
                                        <label class="form-label">Deskripsi</label>
                                        <textarea class="form-control" name="deskripsi" rows="4"><%= galeri.deskripsi %></textarea>
                                    </div>
                                    
                                    <div class="form-group mb-3">
                                        <label class="form-label">Kategori <span class="text-danger">*</span></label>
                                        <select class="form-select" name="kategori" required>
                                            <option value="">Pilih Kategori</option>
                                            <option value="kegiatan" <%= galeri.kategori === 'kegiatan' ? 'selected' : '' %>>Kegiatan</option>
                                            <option value="fasilitas" <%= galeri.kategori === 'fasilitas' ? 'selected' : '' %>>Fasilitas</option>
                                            <option value="prestasi" <%= galeri.kategori === 'prestasi' ? 'selected' : '' %>>Prestasi</option>
                                            <option value="lainnya" <%= galeri.kategori === 'lainnya' ? 'selected' : '' %>>Lainnya</option>
                                        </select>
                                    </div>
                                    
                                    <div class="form-group mb-3">
                                        <label class="form-label">Tanggal <span class="text-danger">*</span></label>
                                        <input type="date" class="form-control" name="tanggal" value="<%= galeri.tanggal.toISOString().split('T')[0] %>" required>
                                    </div>
                                    
                                    <div class="form-group mb-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="isPublished" id="isPublished" value="true" <%= galeri.isPublished ? 'checked' : '' %>>
                                            <label class="form-check-label" for="isPublished">
                                                Publikasikan
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="form-label">Gambar</label>
                                        <input type="file" class="form-control" name="gambar" id="gambarInput" accept="image/*">
                                        <small class="text-muted">Format: JPG, JPEG, PNG. Maks: 2MB. Biarkan kosong jika tidak ingin mengubah gambar.</small>
                                    </div>
                                    
                                    <div class="form-group mb-3">
                                        <label class="form-label">Gambar Saat Ini</label>
                                        <div class="image-preview mt-2" id="imagePreview">
                                            <img src="/assets/img/galeri/<%= galeri.gambar %>" alt="<%= galeri.judul %>" class="img-fluid rounded">
                                        </div>
                                    </div>
                                    
                                    <!-- Related Images Section (if applicable) -->
                                    <% if(typeof relatedImages != 'undefined' && relatedImages.length > 0) { %>
                                        <div class="form-group mb-3">
                                            <label class="form-label">Gambar Terkait</label>
                                            <div class="row">
                                                <% relatedImages.forEach(function(image, index) { %>
                                                    <div class="col-md-4 col-sm-6 mb-3">
                                                        <div class="position-relative">
                                                            <img src="/assets/img/galeri/<%= image.path %>" alt="Related Image" class="img-fluid rounded">
                                                            <div class="position-absolute top-0 end-0">
                                                                <div class="form-check">
                                                                    <input class="form-check-input" type="checkbox" name="deleteRelatedImage[]" value="<%= image._id %>" id="deleteImage<%= index %>">
                                                                    <label class="form-check-label" for="deleteImage<%= index %>">
                                                                        <span class="badge bg-danger">Hapus</span>
                                                                    </label>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                <% }); %>
                                            </div>
                                        </div>
                                    <% } %>
                                    
                                    <!-- Add More Images Section -->
                                    <div class="form-group mb-3">
                                        <label class="form-label">Tambah Gambar Lainnya</label>
                                        <input type="file" class="form-control" name="gambarTambahan" multiple accept="image/*">
                                        <small class="text-muted">Anda dapat memilih beberapa file sekaligus. Maks: 5 file</small>
                                    </div>
                                    
                                    <div class="form-group mb-3">
                                        <label class="form-label">Preview Gambar Tambahan</label>
                                        <div class="row" id="multipleImagePreview">
                                            <!-- Preview will be shown here -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="text-end mt-4">
                                <a href="/admin/galeri" class="btn btn-secondary me-2">Batal</a>
                                <button type="submit" class="btn btn-primary">Perbarui Galeri</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Page Wrapper -->

<%- include('../partials/footer') %>

<script>
    // Single image preview
    document.getElementById('gambarInput').addEventListener('change', function(e) {
        const file = e.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(event) {
                document.querySelector('#imagePreview img').src = event.target.result;
            };
            reader.readAsDataURL(file);
        }
    });
    
    // Multiple images preview
    document.querySelector('input[name="gambarTambahan"]').addEventListener('change', function(e) {
        const files = e.target.files;
        const previewContainer = document.getElementById('multipleImagePreview');
        previewContainer.innerHTML = '';
        
        if (files.length > 0) {
            for (let i = 0; i < files.length; i++) {
                const file = files[i];
                const reader = new FileReader();
                
                reader.onload = function(event) {
                    const col = document.createElement('div');
                    col.className = 'col-md-4 col-sm-6 mb-3';
                    
                    const img = document.createElement('img');
                    img.src = event.target.result;
                    img.className = 'img-fluid rounded';
                    img.alt = 'Preview';
                    
                    col.appendChild(img);
                    previewContainer.appendChild(col);
                };
                
                reader.readAsDataURL(file);
            }
        }
    });
</script>