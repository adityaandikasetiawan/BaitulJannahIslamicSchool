        .bg-info-light {
            background-color: rgba(13, 202, 240, 0.1);
        }
        
        .activity-card {
            transition: all 0.3s ease;
            cursor: pointer;
        }
        
        .activity-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
